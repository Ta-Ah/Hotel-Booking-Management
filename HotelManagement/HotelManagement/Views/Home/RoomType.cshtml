                            <div class="col-sm-4">
                                <img src="/Content/images/two-bedroom.jfif" alt="two">
                            </div>
                            <div class="col-sm-8">
                                <h2>
                                    @Html.DisplayFor(m => m[1].room_type)
                                   
                                </h2>

                                <div class="available-content">
                                    <div class="room-cap">
                                        <h6>Room Capacity</h6>
                                        <h5>
                                            <i class="fa-solid fa-bed"></i><span>
    @Html.DisplayFor(m => m[1].total_room)
</span>
                                        </h5>
                                    </div>
                                    <div class="cost">
                                        <h6>per room per night</h6>
                                        <h3>
                                            BDT <span>
    @Html.DisplayFor(m => m[1].rate)
                                            
</span>
                                        </h3>
                                    </div>
                                </div>
                                <hr>
                                <div class="choose-button">
                                    <h4>
                                        @Html.DisplayFor(m => m[1].vacant_room) Rooms Left
                                    </h4>



                                      
