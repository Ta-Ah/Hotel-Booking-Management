    <section id="booking-container">
        <div class="container-fluid">
            <div class="row g-3">
                <div class="col-lg-7">
                    <div class="avail-room">
                        <h3>Available Guest Rooms</h3>
                        <div class="row my-3 avail-container">
                            <div class="col-sm-4">
                                <img src="/Content/images/one-bedroom.jfif" alt="one">
                            </div>
                            <div class="col-sm-8">
                                <h2>
                                    @Html.DisplayFor(m => m[0].room_type)

                                </h2>

                                <div class="available-content">
                                    <div class="room-cap">
                                        <h6>Room Capacity</h6>
                                        <h5>
                                            <i class="fa-solid fa-bed"></i><span>
    <h2>
        @Html.DisplayFor(m => m[0].total_room)

    </h2>


</span>
                                        </h5>
                                    </div>
                                    <div class="cost">
                                        <h6>per room per night</h6>
                                        <h3>
                                            BDT <span>
    @Html.DisplayFor(m => m[0].rate)




</span>
                                        </h3>
                                    </div>
                                </div>
                                <hr>
                                <div class="choose-button">
                                    <h4>
                                        @Html.DisplayFor(m => m[0].vacant_room)  Rooms Left
                                    </h4>
                                    <a href="~/Home/Index">
                                        <button type="button" class="btn btn-outline-info modal-button mx-md-1" data-bs-toggle="modal" data-bs-target="#booking_modal_one">
                                            Choose
                                        </button>
                                    </a>
                                   
                                </div>
                            </div>
                        </div>
